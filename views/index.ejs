        .chessboard {
    display: grid;
    grid-template-columns: repeat(8, minmax(0, 1fr));
    grid-template-rows: repeat(8, minmax(0, 1fr));
    width: 700px;
    height: 600px;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.6);
    background-color: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(6px);
    border: 1px solid rgba(255, 255, 255, 0.15);
}


        .piece.white{
            color: rgb(246, 242, 242);
            filter: drop-shadow(0 0 5px rgb(66, 43, 241));

        }

        .piece.black{
            /* color: rgb(1, 0, 0); */
            color: #111;
            filter: drop-shadow(0 0 6px rgb(241, 43, 205));

        }

        .flipped {
            transform: rotate(180deg);
        }
        
        .square{
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* .square.light{
            background-color: #dfca9f;
        }

        .square.dark{
            background-color: #23513f;
        } */

        .square.light {
    background: linear-gradient(145deg, #fda9d4, #f5c9e0);
}

.square.dark {
    background: linear-gradient(145deg, #bfe6f3, #d0effa);
}

        .piece {
            font-size: 56px;
            cursor: pointer;
        }

        .piece.draggable{
            cursor: grabbing;
        }

        .dragging {
            opacity: 0.5;
        }

        /* rotate pieces for black player */
        .flipped .piece{
            transform: rotate(180deg);
        }

    </style>
</head>
<body>
    
<div class="w-full h-screen flex items-center justify-center">
    
 <div class="chessboard w-96 h-96 bg-red-800"></div> <!-- center board -->
